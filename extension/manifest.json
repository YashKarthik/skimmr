{
    "manifest_version": 2,
    "name": "Summarize",
    "version": "0.1.0",

    "description": "Browser extension that helps you skim articles.",

    "icons": {
        "48": "assets/logo.svg"
    },
    
    "permissions": [
      "activeTab",
      "contextMenus"
    ],
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./src/contentScript.js"],
        "all_frames": true
      }
    ],

    "background": {
      "scripts": ["./src/background.js"],
      "persistent": false
    },

    "browser_action": {
        "default_icon": "./assets/logo.svg",
        "default_title": "Summarize",
        "default_popup": "./src/index.html"
    }
}

