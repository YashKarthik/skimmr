{
    "manifest_version": 3,
    "name": "Skimmr",
    "version": "0.1.0",

    "description": "Browser extension that helps you skim articles.",

    "icons": {
        "48": "assets/logo.svg"
    },
    
    "permissions": [
      "activeTab",
      "contextMenus",
      "storage",
      "scripting"
    ],

    "optional_host_permissions": [
      "*://*/*"
    ],
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./src/contentScript.js"],
        "all_frames": true
      }
    ],

    "background": {
      "service_worker": "./src/background.js"
    },

    "action": {
        "default_icon": "./assets/logo.svg",
        "default_title": "Summarize",
        "default_popup": "./src/index.html"
    }
}

